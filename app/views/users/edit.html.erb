<div class="container">
  <div class="form-group row">
    <%= label_tag :email, nil, class: "col-md-1 col-md-offset-3 control-label"  %>
    <div class="col-md-4">
      <%= current_user.email %>
    </div>
  </div>

  <%= form_for current_user, method: :put do |f| %>
      <div class="form-group row">
        <%= f.label :first_name, class: "col-md-1 col-md-offset-3 control-label" %>
        <div class="col-md-4">
            <%= f.text_field :first_name, value: current_user.first_name %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :last_name, class: "col-md-1 col-md-offset-3 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :last_name, value: current_user.first_name %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-1 col-md-offset-4">
          <%= f.submit :submit %>
        </div>
      </div>
  <% end %>


</div>